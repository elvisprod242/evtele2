
/**
 * @file Firestore Security Rules for StreamVerse Application
 * @description This ruleset enforces a strict user-ownership model for user profiles and allows public read access to broadcast information.
 *
 * Data Structure:
 * - /users/{userId}: Stores private user profile data. Only the user can read/write their own profile.
 * - /programs/{programId}: Stores public program information. Anyone can read, but only admins can create, update, or delete.
 * - /replays/{replayId}: Stores public replay information. Anyone can read, but only admins can write.
 * - /categories/{categoryId}: Stores program categories. Anyone can read, but only admins can write.
 * - /programs/{programId}/likes/{likeId}: Stores user likes for programs. Users can only create likes with their userId, and can only delete their own likes.
 * - /programs/{programId}/comments/{commentId}: Stores user comments for programs. Anyone can read. Signed-in users can create. Owners or admins can delete/update.
 * - /site_settings/stats: Stores global settings like default views and likes. Publicly readable, admin-only write.
 *
 * Key Security Decisions:
 * - User listing is disabled to protect user privacy.
 * - Write access to programs and categories is restricted to admin users.
 * - Default security posture for ambiguous relationships is strict owner-only access.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    /**
     * @description Enforces strict user-ownership for user profiles.
     */
    match /users/{userId} {
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is disabled

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to program information. Write access is restricted to admins.
     */
    match /programs/{programId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    /**
     * @description Allows public read access to replays. Write access is restricted to admins.
     */
    match /replays/{replayId} {
      allow list, get: if true;
      allow create, update, delete: if isAdmin();
    }

    /**
     * @description Allows public read access to categories. Write access is restricted to admins.
     */
    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    /**
     * @description Enforces user-ownership for likes.
     */
    match /programs/{programId}/likes/{likeId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if false;
      allow delete: if isOwner(resource.data.userId);
    }

    /**
     * @description Enforces user-ownership for comments.
     */
    match /programs/{programId}/comments/{commentId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    /**
     * @description Public read for site settings, admin-only write.
     */
    match /site_settings/{settingId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
  }
}
